<form id="login-form" action="/user/login?redir={{redir}}" method="post" style="padding: 0 15px" ctrl="login">
  <input id="login-username" name="username" type="text" placeholder="用户名" required />
  <input id="login-password" name="password" type="password" placeholder="密码" required />
  <button class="btn rounded full big center" type="submit">登陆</button>
  <div class="flex right" style="font-size: 12px; padding-top: 10px">
    <a href="javascript:void(0);" ctrl="emitter" events="panel.register.open">注册</a>
  </div>
</form>